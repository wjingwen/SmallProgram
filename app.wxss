/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.linebr{width: 100%;height: 20rpx;background: #eaeaea;margin-bottom: 35rpx}
.linebrbg{width: 100%;height: 30rpx;background: #eaeaea;}
.center{text-align: center}
/* 登录注册 */
.login{margin-top: 20%}
.login .title{font-size: 40rpx;text-align: center;padding: 20rpx 0}
.login .inputstyle{display: flex;flex-direction: row;border-bottom: 1px solid #eaeaea;margin: 20rpx 30rpx;padding: 20rpx 0}
.login .inputstyle .text{padding: 0 20rpx}
.login .center navigator{display: inline}
.login .wxlogin {text-align: center;margin-top: 20rpx;}
.login .wxlogin image{width: 40rpx;height: 40rpx;vertical-align: middle}
.login .loginbtn{text-align: center;margin: 40rpx 0}

